# Database
# PostgreSQL connection string for local development
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/vox_dev?schema=public"

# File Storage Configuration
# Use "local" for local file storage or "s3" for S3-compatible storage
STORAGE_TYPE=local
# For local storage, the path where uploaded files will be stored
LOCAL_STORAGE_PATH=./uploads
# For S3 storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=vendor-documents
S3_REGION=us-east-1

# File Upload Constraints
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
